<%- include('partials/header') %>
<div class="container">
  <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/info-usuarios" class="text-decoration-none">Usuários</a></li>
      <li class="breadcrumb-item active" aria-current="page">Novo Usuário</li>
    </ol>
  </nav>
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">
        Cadastro de Usuário 
      </h2>
      <div class="row g-3">
        <div class="col-12 col-md-6">
          <label class="form-label">Nome Completo</label>
          <input type="text" class="form-control" id="nome" placeholder="Digite o nome completo">
        </div>
        <div class="col-12 col-md-6">
          <label class="form-label">CPF</label>
          <input type="text" class="form-control" id="cpf" placeholder="000.000.000-00">
        </div>
      </div>
      <div class="d-grid gap-2 col-12 col-md-6 mx-auto mt-4">
        <button id="btnMaisCampos" class="btn btn-primary">
          <i class="bi bi-plus-circle me-2"></i>
          Adicionar Responsável
        </button>
      </div>
      <div id="camposExtras" style="display:none" class="mt-4">
        <div class="card border-primary">
          <div class="card-header bg-primary text-white">
            Dados do Responsável
          </div>
          <div class="card-body">
            <div class="row g-3">
              <div class="col-12 col-md-4">
                <label class="form-label">Nome do Responsável</label>
                <input type="text" class="form-control" id="nomeResponsavel" placeholder="Digite o nome do responsável">
              </div>
              <div class="col-12 col-md-4">
                <label class="form-label">CPF do Responsável</label>
                <input type="text" class="form-control" id="cpfResponsavel" placeholder="000.000.000-00">
              </div>
              <div class="col-12 col-md-4">
                <label class="form-label">Telefone do Responsável</label>
                <input type="text" class="form-control" id="telefoneResponsavel" placeholder="(00) 00000-0000">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-grid gap-2 col-12 col-md-6 mx-auto mb-4">
    <button class="btn btn-success" id="salvarUsuario">
      <i class="fa-solid fa-floppy-disk me-2"></i>
      Salvar Usuário
    </button>
  </div>
  <!-- Seção de Cadastro Digital -->
  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Cadastro de Digital</h2>
      
      <div class="d-grid gap-2 col-12 col-md-6 mx-auto mb-4">
        <button class="btn btn-primary" id="cadastrarDigital">
          <i class="fa-solid fa-fingerprint me-2"></i>
          Cadastrar Digital
        </button>
      </div>

      <div id="statusCard" style="display: none;">
        <div class="card border-info">
          <div class="card-header bg-info text-white">
            Status do Cadastro
          </div>
          <div class="card-body">
            <table class="table">
              <thead>
                <tr>
                  <th>ID da Requisição</th>
                  <th>Status</th>
                  <th>Data/Hora</th>
                </tr>
              </thead>
              <tbody id="statusTable">
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/adicionar_responsavel.js"></script>
<script src="/js/enviar_dados.js" type="module"></script>
<script src="/js/request_digital.js" type="module"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
